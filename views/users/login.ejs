<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-8 offset-2">Login on Wanderlust</h1>
    <form action="/login" method="post" class="needs-validation" novalidate>

<!-- Username -->
    <div class="col-8 offset-2">
             <div class="inp">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" placeholder="Enter username" id="username" class="form-control" required>
        </div>
    </div>

<!-- Password -->
    <div class="col-8 offset-2">
             <div class="inp">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" placeholder="Enter password" id="password" class="form-control" required>
        </div>
        <button class="btn btn-success">Login</button>
    </div>
</form>
</div>

<% layout("layouts/boilerplate") %>
    <div class="row m-4">
        <div class="col-8 offset-2">
            <h1>Edit Your Form Here</h1>
    <form action="/listings/<%= data._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="inp mt-4">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listings[title]" value="<%= data.title  %>" id="title" class="form-control" required>
            <div class="invalid-feedback">Enter valid details</div>
        </div>

        <div class="inp">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]" id="description"    class="form-control"><%= data.description %></textarea required>
                <div class="invalid-feedback">Enter valid details</div>
        </div>

        <!-- View image preview -->
         <div class="inp">
            <h5>Uploded Image is </h5>
            <img src="<%= originalImageUrl %>" alt="" width="300">
         </div>

        <div class="inp">
            <label for="link" class="form-label">Upload New Image</label>
            <input type="file" name="listings[image][url]"  class="form-control">
            <div class="invalid-feedback">Enter valid details</div>
        </div>

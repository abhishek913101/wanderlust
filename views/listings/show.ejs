<% layout("layouts/boilerplate") %>
<div class="row m-5">
    <div class="col-8 offset-2">
        <h3 class=""><%= data.title  %></h3>

    <div class="card listing-card" >
        <img src="<%= data.image.url  %>" class="card-img-top  show-img" alt="List Image..">
        <div class="card-body card-text">
            <h6 class="pb-2"><i>Owned By:- <i class="fa-solid fa-user pe-1"></i> @<%= data.owner.username.toLowerCase() %></i></h6>
            <p><strong class="me-3">Place Name:- <%= data.title  %></strong></p>
            <p><strong class="me-3">Description:- </strong><%= data.description %></p>
            <p> <strong class="me-3">Price:-  &#8377; <%= data.price.toLocaleString("en-IN")  %> </strong></p>
            <p><strong class="me-3">Location:- </strong> <%= data.location %></p>
            <p><strong class="me-3">Country:- </strong><%= data.country %></p>
        </div>   



        <% if(currUser && data.owner._id.equals(currUser._id)) {%>
        <div class="row">
            <div class="col-8 d-flex show-btns offset-2">
                <a href="/listings/<%= data._id %>/edit" class="btn btn-dark mr-3">Edit Post</a>
                <form action="/listings/<%= data._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete Post</button>
                </form>
            </div>
        </div>
        <% } %>


    </div>

    </div>
    <hr>


    
    <div class="col-8 offset-2">
                <% if(currUser) {%>
                <h4>Leave a Review</h4>
                <form action="/listings/<%= data._id %>/reviews" method="post" novalidate class="needs-validation"> 

                    <!-- <div class="m-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                    </div> -->

                    
                    <!-- Dynamic star ratting -->
                    <div class="m-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>


                    <div class="m-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea 
                        name="review[comment]" 
                        id="comment" 
                        class="form-control" 
                        rows="4" 
                        cols="50"
                        required
                        ></textarea>
                        <div class="invalid-feedback">Please add submit comments for review</div>
                    </div>
                    <button class="btn btn-outline-dark offset-5">Submit</button>
                </form>
                <% } %> 
                <h1>All Reviews</h1>
                <div class="row">
                    <% for(review of data.reviews) {%>

                    <div class="card col-5 m-3">
                        <div class="card-body">
                            <h6 class="card-title ms-3 p-2"><i class="fa-solid fa-user pe-1"></i> @<%= review.author.username %></h6>
                            <p class="card-text"><%= review.comment%></p>
                            <p class="starability-result" data-rating="<%= review.rating%>"><%= review.rating%></p>
                        </div>
                            <form action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                            <button class="btn btn-sm btn-danger ms-3 mb-2">Delete</button>
                        </form>
                    </div>
                <% } %>
                </div>
            </div> 
            
</div>
    

<%  layout("/layouts/boilerplate")  %>
<body>

    <div class="row row-cols-lg-3 row-cols-md-3 mt-3">
        <% for(let list of allListings) {%>
        <a href="/listings/<%= list._id  %>">

            <div class="card listing-card">
            <img src="<%= list.image.url%>" class="card-img-top" alt="Listings images" style="height: 20rem;">

            <div class="card-img-overlay"></div>

            <div class="card-body">
                <p class="card-text">
                     <strong><%= list.title  %> </strong> <br> 
                      &#8377;<%= list.price.toLocaleString("en-IN")+" /Night" %>
                </p>
            </div>
        </div> 

        </a>
        <% } %>
    </div>


</body>
